.product
	&__wrap_right &__product-img,
	&__wrap_left &__product-text
		float left

	&__wrap_left &__product-img,
	&__wrap_right &__product-text
		float left
		@media lg
			float right

	&__wrap_left
		text-align left
		@media lg
			text-align right

	&__wrap_right
		text-align left

	&__wrap_left &__content:before
		right 0

	&__wrap_right &__content:before
		left 0

	&__product-img
		text-align center

	&__img
	  display inline-block
	  height auto
		width 100%
		max-width 270px
		@media lg
			padding-top 115px
			max-width 450px

	&__title
		padding .2em 2rem .2em
		@media lg
			padding-right 4rem
			padding-left 4rem

	&__title, &__heading
		font-size 3em
		font-weight bold
		@media lg
			font-size 4em

	&__content
		background-color #1f1f1f
		position relative
		padding 2em 2rem
		@media lg
			padding 2.75rem 4rem 5.5em
		&:before
			background-color #1f1f1f
			content ""
			position absolute
			top 0
			bottom 0
			width 50vw
			z-index -1
	&__heading
		color #fff
		margin-bottom: .25em;

	&__paragraph
		font-size 1.8em
		color #fff
		padding 1.35em 0 .5em
		line-height 170%
		@media lg
			font-size 2.25em
			padding 1.25em 0 1em

	&__tags
		background-color #f48a00
		color #fff
		font-weight 600
		padding .5em .8em
		display inline-block
		font-size 1.6em
		@media lg
			font-size 1.8em

	&__btn-block
		margin 2em 2rem 3em
		@media lg
			margin 8rem 0 10rem

	&_color
		color #f48a00