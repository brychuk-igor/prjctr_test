.owl-carousel-arrows
  position absolute
  z-index 2
  width 26px
  height 44px
  top 40%
  margin-top -22px
  font-size 80px
  line-height 40px
  cursor pointer
  background url(../img/arrow_top_promo.png) center no-repeat

.owl-carousel-arrows-next
  right 50px

.owl-carousel-arrows-prev
  left 50px
  transform rotate(180deg)
